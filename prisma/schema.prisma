generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String          @id @default(uuid()) @map("_id")
  username              String          @unique
  name                  String?
  surname               String?
  cover                 String?
  avatar                String?
  description           String?
  city                  String?
  school                String?
  work                  String?
  website               String?
  createdAt             DateTime        @default(now())
  posts                 Post[]
  comments              Comment[]
  likes                 Like[]
  followers             Follower[]      @relation("Followers")
  following             Follower[]      @relation("Following")
  followReqeustSent     FollowRequest[] @relation("FollowRequestSender")
  followReqeustReceived FollowRequest[] @relation("FollowRequestReceiver")
  blocks                Block[]         @relation("BlockSent")
  blockedBy             Block[]         @relation("BlockReceived")
  story                 Story[]
}

model Post {
  id        String    @id @default(uuid()) @map("_id")
  desc      String
  img       String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  likes     Like[]
  comments  Comment[]
}

model Comment {
  id        String   @id @default(uuid()) @map("_id")
  desc      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    String
  likes     Like[]
}

model Like {
  id        String   @id @default(uuid()) @map("_id")
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    String
  comment   Comment? @relation(fields: [commentId], references: [id], onDelete: Cascade)
  commentId String?
}

model Follower {
  id          String   @id @default(uuid()) @map("_id")
  createdAt   DateTime @default(now())
  follower    User     @relation("Followers", fields: [followerId], references: [id], onDelete: Cascade)
  followerId  String
  following   User     @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)
  followingId String
}

model FollowRequest {
  id                    String   @id @default(uuid()) @map("_id")
  createdAt             DateTime @default(now())
  followRequestSender   User     @relation("FollowRequestSender", fields: [senderId], references: [id], onDelete: Cascade)
  senderId              String
  followRequestReceiver User     @relation("FollowRequestReceiver", fields: [receiverId], references: [id], onDelete: Cascade)
  receiverId            String

  @@unique([senderId, receiverId])
}

model Block {
  id        String   @id @default(uuid()) @map("_id")
  createdAt DateTime @default(now())
  blocker   User     @relation("BlockSent", fields: [blockerId], references: [id], onDelete: Cascade)
  blockerId String
  blocked   User     @relation("BlockReceived", fields: [blockedId], references: [id], onDelete: Cascade)
  blockedId String

  @@unique([blockerId, blockedId])
}

model Story {
  id        String   @id @default(uuid()) @map("_id")
  createdAt DateTime @default(now())
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String   @unique
  img       String
}

model NewTest {
  id   String @id @map("_id")
  name String
}
